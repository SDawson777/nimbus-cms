{
  "name": "server",
  "version": "1.0.0",
  "private": true,
  "description": "Nimbus CMS API server (Express + TypeScript)",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "postinstall": "prisma generate",
    "migrate:deploy": "prisma migrate deploy",
    "start": "npm run build && node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "lint": "eslint \"server/src/**/*.{ts,tsx}\"",
    "test": "echo \"No server tests defined\"",
    "db:reset:demo": "cross-env NODE_ENV=development prisma migrate reset --force --skip-generate && npm run db:seed:demo",
    "db:seed:demo": "cross-env NODE_ENV=development node prisma/seed-demo.cjs"
  },
  "dependencies": {
    "@prisma/client": "^5.20.0",
    "@sanity/client": "^7.13.1",
    "axios": "^1.7.7",
    "bcryptjs": "^2.4.3",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-rate-limit": "^8.2.1",
    "express-session": "^1.18.2",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "multer": "^1.4.5-lts.1",
    "openai": "^6.9.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/express-session": "^1.18.2",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^1.4.12",
    "@types/node": "^24.10.1",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "cross-env": "^7.0.3",
    "prisma": "^5.20.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"
  },
  "prisma": {
    "schema": "prisma/schema.prisma"
  }
}
