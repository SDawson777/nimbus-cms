{
  "name": "server",
  "version": "1.0.0",
  "private": true,
  "description": "Nimbus CMS API server (Express + TypeScript)",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "start": "NODE_OPTIONS='--max-old-space-size=4096' node dist/index.js",
    "dev": "NODE_OPTIONS='--max-old-space-size=4096' npx -y tsx@^4.19.2 watch src/index.ts",
    "seed": "npx -y tsx@^4.19.2 prisma/seed.ts",
    "seed:admin": "npx -y tsx@^4.19.2 prisma/seedAdmin.ts",
    "lint": "cd .. && eslint \"server/src/**/*.{ts,tsx}\"",
    "test": "vitest run",
    "seed:e2e": "npx -y tsx@^4.19.2 src/seedTestAdmin.ts",
    "postinstall": "PRISMA_GENERATE_SKIP_AUTOINSTALL=1 prisma generate || echo 'prisma generate skipped'",
    "prisma:generate": "PRISMA_GENERATE_SKIP_AUTOINSTALL=1 prisma generate",
    "lint:types": "tsc -b --pretty false"
  },
  "dependencies": {
    "@prisma/client": "^5.20.0",
    "@sanity/client": "^7.13.1",
    "@sendgrid/mail": "^8.1.3",
    "@sentry/node": "^8.55.0",
    "axios": "^1.7.7",
    "bcryptjs": "^2.4.3",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "openai": "^6.9.1",
    "prom-client": "^15.0.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.10.1",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "prisma": "^5.20.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.2",
    "typescript": "^5.9.3"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "prisma": {
    "schema": "../prisma/schema.prisma"
  }
}
