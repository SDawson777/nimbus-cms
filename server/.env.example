DATABASE_URL=
JWT_SECRET=
CORS_ORIGINS=
SANITY_WEBHOOK_SECRET=
NIMBUS_ENV=production

# Sentry (server-side error reporting)
# If set, server errors (including /dev/trigger-error in non-prod) will be sent.
SENTRY_DSN=
# Optional; defaults to APP_ENV/NODE_ENV
SENTRY_ENVIRONMENT=
SENTRY_RELEASE=
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.01
# Set true in dev to warn loudly if SENTRY_DSN is missing
SENTRY_REQUIRED=false
# Flush timeout on shutdown (ms)
SENTRY_FLUSH_TIMEOUT_MS=2000

# Secret used to validate preview requests. Keep this on the server only.
PREVIEW_SECRET=

# Optional server-side Mapbox token (keep secret if used server-side)
MAPBOX_TOKEN=

# Comma-separated list of origins allowed to embed previews or make preview
# related requests (e.g. for white-label previewing).
ALLOW_PREVIEW_CORS=http://localhost:3000
