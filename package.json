{
  "name": "nimbus-cms",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "pnpm -C apps/admin build && pnpm -C apps/studio build && pnpm -C server build",
    "typecheck": "pnpm server:build",
    "sanity:check": "pnpm -C apps/studio check",
    "admin:dev": "pnpm -C apps/admin dev",
    "admin:build": "pnpm -C apps/admin build",
    "studio:dev": "pnpm -C apps/studio dev",
    "studio:build": "rm -rf dist && pnpm -C apps/studio build && cp -r apps/studio/dist dist",
    "server:dev": "pnpm -C server dev",
    "server:build": "pnpm -C server build",
    "lint": "eslint .",
    "test": "echo \"No root test suite defined\"",
    "seed": "pnpm -C server exec ts-node --project ../prisma/tsconfig.seed.json --transpile-only ../prisma/seed.ts",
    "demo:seed:db": "pnpm -C server exec ts-node --project ../prisma/tsconfig.seed.json --transpile-only ../prisma/seed.ts",
    "demo:seed:sanity": "ts-node --transpile-only scripts/seed-sanity-demo.ts",
    "demo:seed:all": "pnpm run demo:seed:db && pnpm run demo:seed:sanity",
    "prisma:seed": "pnpm -C server exec ts-node --project ../prisma/tsconfig.seed.json --transpile-only ../prisma/seed.ts",
    "seed:sanity:demo": "ts-node --transpile-only scripts/seed-sanity-demo.ts",
    "sanity:dataset:export": "pnpm -C apps/studio exec sanity dataset export",
    "sanity:dataset:import": "pnpm -C apps/studio exec sanity dataset import",
    "sanity:export-demo": "node scripts/sanity-export-demo.mjs",
    "sanity:import-demo-restore": "node scripts/sanity-import-demo-restore.mjs",
    "sanity:seed-legal-demo": "pnpm -C server exec ts-node --transpile-only ../scripts/sanity-seed-legal-demo.ts",
    "cms:export": "pnpm -C server exec ts-node --transpile-only ../scripts/exportContent.ts",
    "cms:import": "pnpm -C server exec ts-node --transpile-only ../scripts/importContent.ts",
    "cms:promote": "pnpm -C server exec ts-node --transpile-only ../scripts/promoteDataset.ts",
    "audit:client-envs": "node scripts/audit-client-envs.js",
    "licenses:generate": "node scripts/generate-license-report.js",
    "lint:types": "pnpm -C server run lint:types",
    "validate-env": "node scripts/validate-env.js",
    "smoke:check": "node scripts/smoke-check-deploy.mjs"
  },
  "ci": {
    "enterpriseChecks": "pnpm audit:client-envs && pnpm licenses:generate"
  },
  "workspaces": [
    "apps/admin",
    "apps/studio",
    "server"
  ],
  "devDependencies": {
    "@prisma/client": "^5.20.0",
    "@sanity/client": "^7.13.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@typescript-eslint/parser": "^7.13.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.8.1",
    "dotenv": "^17.2.3",
    "eslint": "^8.57.1",
    "jsdom": "^27.3.0",
    "prisma": "^5.20.0",
    "supertest": "^7.1.4",
    "vitest": "^4.0.15",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "express": "^5.1.0",
    "@playwright/test": "^1.43.0",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "multer": "^1.4.5-lts.1",
    "openai": "^6.9.1",
    "prom-client": "^15.0.0",
    "axios": "^1.7.7",
    "cors": "^2.8.5",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "zod": "^4.1.13",
    "cookie-parser": "^1.4.7"
  },
  "dependencies": {
    "framer-motion": "^12.23.25"
  },
  "prisma": {
    "seed": "pnpm -C server exec ts-node --project ../prisma/tsconfig.seed.json --transpile-only ../prisma/seed.ts"
  }
}
