{
  "name": "nimbus-cms",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "pnpm -C apps/admin build && pnpm -C apps/studio build && pnpm -C server build",
    "typecheck": "pnpm server:build",
    "sanity:check": "pnpm -C apps/studio check",
    "admin:dev": "pnpm -C apps/admin dev",
    "admin:build": "pnpm -C apps/admin build",
    "studio:dev": "pnpm -C apps/studio dev",
    "studio:build": "rm -rf dist && pnpm -C apps/studio build && cp -r apps/studio/dist dist",
    "server:dev": "pnpm -C server dev",
    "server:build": "pnpm -C server build",
    "lint": "eslint .",
    "test": "echo \"No root test suite defined\""
  },
  "workspaces": [
    "apps/admin",
    "apps/studio",
    "server"
  ],
  "devDependencies": {
    "@prisma/client": "^5.20.0",
    "@typescript-eslint/parser": "^8.49.0",
    "eslint": "^8.57.1",
    "prisma": "^5.20.0"
  },
  "dependencies": {
    "framer-motion": "^12.23.25"
  }
}
