{
  "name": "nimbus-cms",
  "private": true,
  "version": "1.0.0",
  "main": "server.ts",
  "license": "UNLICENSED",
  "description": "Nimbus Cannabis OS CMS with Sanity Studio + Express API for educational articles.",
  "author": "",
  "scripts": {
    "dev:admin": "cd apps/admin && npm run dev",
    "build:admin": "cd apps/admin && npm run build",
    "start:admin": "cd apps/admin && npm run preview",
    "dev": "concurrently \"npm:dev:studio\" \"npm:dev:api\"",
    "dev:api": "nodemon --watch server/src --exec \"ts-node server/src/server.ts\"",
    "dev:studio": "sanity dev --cwd apps/studio",
    "studio:build": "sanity build --cwd apps/studio",
    "studio:deploy": "sanity deploy --cwd apps/studio",
    "studio:deploy-graphql": "sanity graphql deploy --cwd apps/studio",
    "build:api": "tsc -p server/tsconfig.json",
    "start:api": "node server/dist/server.js",
    "test": "vitest run",
    "test:a11y": "node scripts/run-pa11y.js",
    "test:coverage": "vitest run --coverage",
    "fmt": "prettier -w .",
    "lint:src": "npx eslint server/src apps/admin/src --ext .ts,.tsx,.js,.jsx",
    "lint": "npm run lint:src",
    "build": "npm run build:api && npm run build:admin && npm run studio:build",
    "lint:quotes": "grep -R --line-number --color=always '[‘’‚‛“”„]' || true",
    "cms:export": "ts-node scripts/exportContent.ts",
    "cms:import": "ts-node scripts/importContent.ts",
    "cms:promote": "ts-node scripts/promoteDataset.ts"
  },
  "keywords": [
    "sanity",
    "cms",
    "express",
    "api"
  ],
  "dependencies": {
    "@sanity/client": "^7.8.1",
    "@sanity/vision": "^4.18.0",
    "concurrently": "^8.2.2",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "express-rate-limit": "^6.10.0",
    "helmet": "^7.0.0",
    "multer": "^2.0.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sanity": "^4.18.0",
    "styled-components": "^6.1.18",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@sanity/eslint-config-studio": "^5.0.2",
    "@types/express": "^5.0.5",
    "@types/node": "^20.2.5",
    "@types/react": "^18.2.21",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitest/coverage-v8": "^4.0.0",
    "bcryptjs": "^2.4.3",
    "c8": "^10.1.3",
    "eslint": "^9.28.0",
    "jsonwebtoken": "^9.0.2",
    "nodemon": "^3.1.10",
    "pa11y": "^6.0.0",
    "prettier": "^3.3.3",
    "supertest": "^7.1.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "vite": "^7.2.2",
    "vitest": "^4.0.10"
  },
  "prettier": {
    "semi": false,
    "printWidth": 100,
    "bracketSpacing": false,
    "singleQuote": true
  }
}
