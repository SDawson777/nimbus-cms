{
  "name": "jars-cms",
  "private": true,
  "version": "1.0.0",
  "main": "server.ts",
  "license": "UNLICENSED",
  "description": "Jars CMS with Sanity Studio + Express API for educational articles.",
  "author": "",
  "scripts": {
    "dev": "concurrently \"sanity dev\" \"nodemon server.ts\"",
    "studio": "sanity dev",
    "studio:build": "sanity build",
    "studio:deploy": "sanity deploy",
    "studio:deploy-graphql": "sanity graphql deploy",
    "api:dev": "nodemon server.ts",
    "api:build": "tsc",
    "api:start": "node dist/server.js",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "fmt": "prettier -w .",
    "lint:quotes": "grep -R --line-number --color=always '[‘’‚‛“”„]' || true"
  },
  "keywords": [
    "sanity",
    "cms",
    "express",
    "api"
  ],
  "dependencies": {
    "@sanity/client": "^7.8.1",
    "@sanity/vision": "^3.97.1",
    "concurrently": "^8.2.2",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "sanity": "^3.97.1",
    "styled-components": "^6.1.18"
  },
  "devDependencies": {
    "@sanity/eslint-config-studio": "^5.0.2",
    "@types/express": "^5.0.3",
    "@types/react": "^19.1.0",
    "@vitest/coverage-v8": "^3.2.4",
    "c8": "^10.1.3",
    "eslint": "^9.28.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.3.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "prettier": {
    "semi": false,
    "printWidth": 100,
    "bracketSpacing": false,
    "singleQuote": true
  }
}
