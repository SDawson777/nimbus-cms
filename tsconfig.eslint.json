{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowJs": true,
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": [
    "server/src/**/*",
    "apps/**/*",
    "legacy/jars-cms/**/*",
    "legacy/jars-cms-api/src/**/*",
    "core-api/src/**/*",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx"
  ]
}
